<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cn.studyjams.s1.sj68.weijiaqi.Style"
    tools:showIn="@layout/activity_style">

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:src="@drawable/ziyouyong"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:id="@+id/imageView3"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ziyouyong"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:src="@drawable/wayong"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:id="@+id/imageView4"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wayong"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:src="@drawable/yangyong"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:id="@+id/imageView5"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yangyong"
                android:id="@+id/textView7"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:src="@drawable/dieyong"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:id="@+id/imageView6"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dieyong"
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
